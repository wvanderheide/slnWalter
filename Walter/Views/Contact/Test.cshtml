<script>
	function HideCol(colNum) {
		var colNamePrefix = "Col" + colNum;

		$("div[id^='" + colNamePrefix + "']").toggle();
	}

	function Filter(colNum) {
		var Filter1 = $('#Filter1').val();

		if (Filter1 === "All") {
			var colNamePrefix = "Col" + colNum;
			$("div[id^='" + colNamePrefix + "']").show();
			$("div[id^='" + colNamePrefix + "']").parent().show();
		}
		else {
			var colNamePrefix = "Col" + colNum;

			var cols = $("div[id^='" + colNamePrefix + "']");

			var text = "";
			$.each(cols, function (key, value) {
				text = $('#' + value.id).text();
				//alert(text);
				if (text != Filter1) {
					$('#' + value.id).parent().hide();
				}
				else {
					$('#' + value.id).parent().show();
				}
				//alert(key + ": " + item);
			});
		}
	}
</script>