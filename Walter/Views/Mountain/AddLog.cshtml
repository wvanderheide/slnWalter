@{
    ViewBag.Title = "Add Log";
}
<div class="container">
    <h2>@ViewBag.MountainName</h2>
    <form class="form-horizontal" role="form" action="/Mountain/SaveLog" method="post">
      <div class="form-group">
          <label class="control-label col-sm-2" for="SummitDate">Summit Date:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="SummitDate" name="SummitDate" placeholder="Summit Date" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="SummitNote">Summit Note:</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="5" id="SummitNote" name="summitNote" placeholder="Summit Note"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <input type="hidden" name="MountainID" value="@ViewBag.MountainID" />
    </form>
</div>
