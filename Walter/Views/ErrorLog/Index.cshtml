@* -----------------------------------------------------------------------------
	   Helper Methods
	------------------------------------------------------------------------------- *@
@helper TypeShortened(string fullType)
{
	string[] parts = fullType.Split('.');
	fullType = parts[parts.Length - 1];
	fullType = fullType.Replace("Exception", "");
	if (fullType.Length == 0)
	{
		fullType = parts[parts.Length - 1];
	}

	@fullType;
}
